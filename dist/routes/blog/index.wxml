<block>
    <view class="blog">
        <block>
            <block wx:if="{{toc.length > 0}}">
                <view class="post" wx:key="{{i}}" bindtap="navigateTo" wx:for="{{loopArray1}}"
                wx:for-item="item" wx:for-index="i" data-e-navigateTo-so="this" data-e-navigateTo-a-a="{{item.filename}}">
                    <card padding="{{true}}" __triggerObserer="{{ _triggerObserer }}">
                        <view class="row">
                            <view class="title">{{item.title}}</view>
                            <view class="date">{{item.$loopState__temp2}}</view>
                        </view>
                        <view class="desc">{{item.desc}}</view>
                        <image src="{{item.cover}}" mode="widthFix" />
                    </card>
                    <white-space __triggerObserer="{{ _triggerObserer }}"></white-space>
                </view>
            </block>
            <block wx:else>
                <block wx:if="{{loading}}">
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
            </block>
        </block>
        <block wx:if="{{loading}}">
            <loading __triggerObserer="{{ _triggerObserer }}"></loading>
        </block>
        <tabbar-shadow __triggerObserer="{{ _triggerObserer }}"></tabbar-shadow>
    </view>
</block>