<block>
    <view class="post">
        <block>
            <block wx:if="{{loading}}">
                <loading __triggerObserer="{{ _triggerObserer }}"></loading>
            </block>
            <block wx:else>
                <view>
                    <view class="header">
                        <view class="title">{{title}}</view>
                        <view class="tag">{{anonymousState__temp}}</view>
                        <view class="desc">{{desc}}</view>
                    </view>
                    <image class="cover" src="{{cover.l}}" mode="widthFix" />
                    <card padding="{{true}}" __triggerObserer="{{ _triggerObserer }}">
                        <rich-text class="markdown" nodes="{{anonymousState__temp2}}"></rich-text>
                    </card>
                    <view class="date">{{anonymousState__temp3}}</view>
                </view>
            </block>
        </block>
    </view>
</block>