<block>
    <view>
        <block>
            <block wx:if="{{loading}}">
                <loading __triggerObserer="{{ _triggerObserer }}"></loading>
            </block>
            <block wx:else>
                <swiper class="banner" indicator-color="#999" indicator-active-color="#333"
                circular="{{true}}" autoplay="{{true}}">
                    <swiper-item wx:key="{{i}}" wx:for="{{loopArray0}}" wx:for-item="item"
                    wx:for-index="i">
                        <image src="{{item.cover}}" mode="widthFix" />
                    </swiper-item>
                </swiper>
            </block>
        </block>
        <card title="Intro" __triggerObserer="{{ _triggerObserer }}" btn="Checkout my resume"
        padding="{{true}}">
            <block>
                <block wx:if="{{loading || !intro.skills}}">
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
                <block wx:else>
                    <intro data="{{intro}}" __triggerObserer="{{ _triggerObserer }}"></intro>
                </block>
            </block>
        </card>
        <white-space __triggerObserer="{{ _triggerObserer }}"></white-space>
        <card title="Design" __triggerObserer="{{ _triggerObserer }}"
        btn="View my projects" padding="{{true}}">
            <block>
                <block wx:if="{{loading}}">
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
                <block wx:else>
                    <design data="{{design}}" __triggerObserer="{{ _triggerObserer }}"></design>
                </block>
            </block>
        </card>
        <white-space __triggerObserer="{{ _triggerObserer }}"></white-space>
        <card title="Coding" __triggerObserer="{{ _triggerObserer }}"
        btn="View my repos" padding="{{true}}">
            <block>
                <block wx:if="{{loading}}">
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
                <block wx:else>
                    <coding data="{{coding}}" __triggerObserer="{{ _triggerObserer }}"></coding>
                </block>
            </block>
        </card>
        <white-space __triggerObserer="{{ _triggerObserer }}"></white-space>
        <card title="Article" __triggerObserer="{{ _triggerObserer }}"
        btn="View my blog" padding="{{true}}">
            <block>
                <block wx:if="{{loading}}">
                    <loading __triggerObserer="{{ _triggerObserer }}"></loading>
                </block>
                <block wx:else>
                    <article data="{{article}}" __triggerObserer="{{ _triggerObserer }}"></article>
                </block>
            </block>
        </card>
        <white-space __triggerObserer="{{ _triggerObserer }}"></white-space>
        <tabbar-shadow __triggerObserer="{{ _triggerObserer }}"></tabbar-shadow>
    </view>
</block>